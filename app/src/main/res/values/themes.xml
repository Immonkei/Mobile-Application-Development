<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================== Base Application Theme ================== -->
    <style name="Theme.ExpenseTracker" parent="Theme.Material3.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/md_primary</item>
        <item name="colorOnPrimary">@color/md_on_primary</item>
        <item name="colorPrimaryContainer">@color/md_primary_container</item>

        <item name="colorSecondary">@color/md_secondary</item>
        <item name="colorOnSecondary">@color/md_on_secondary</item>
        <item name="colorSecondaryContainer">@color/md_secondary_container</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/md_surface</item>
        <item name="colorOnSurface">@color/md_on_surface</item>
        <item name="colorSurfaceVariant">@color/md_surface_variant</item>
        <item name="colorOutline">@color/md_outline</item>

        <!-- Custom Typography -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.ExpenseTracker.TitleLarge</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.ExpenseTracker.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.ExpenseTracker.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.ExpenseTracker.BodyMedium</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.ExpenseTracker.LabelMedium</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>


    <!-- ================== Custom Typography Styles ================== -->
    <style name="TextAppearance.ExpenseTracker.TitleLarge" parent="TextAppearance.Material3.TitleLarge" />
    <style name="TextAppearance.ExpenseTracker.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall" />
    <style name="TextAppearance.ExpenseTracker.BodyLarge" parent="TextAppearance.Material3.BodyLarge" />
    <style name="TextAppearance.ExpenseTracker.BodyMedium" parent="TextAppearance.Material3.BodyMedium" />
    <style name="TextAppearance.ExpenseTracker.LabelMedium" parent="TextAppearance.Material3.LabelMedium" />


    <!-- ================== FIX FOR MISSING STYLES ================== -->
    <style name="ShapeAppearanceOverlay" parent="" />

    <!-- ADD THIS NEW STYLE FOR THE BOTTOMNAV -->
    <style name="Widget.ExpenseTracker.BottomNav" parent="Widget.Material3.BottomNavigationView" />

</resources>
