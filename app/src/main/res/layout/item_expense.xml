<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <!-- Left accent bar -->
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:minHeight="80dp" />

        <!-- Content area -->
        <LinearLayout
            android:orientation="vertical"
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- Header row with category and amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Category icon badge -->
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="?attr/colorPrimaryContainer"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_label"
                        android:tint="?attr/colorOnPrimaryContainer"
                        android:contentDescription="Category icon" />

                </androidx.cardview.widget.CardView>

                <!-- Category and amount -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Category (bold heading) -->
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurface"
                        android:letterSpacing="0.01" />

                    <!-- Amount (highlighted primary color) -->
                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$12.50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:textColor="?attr/colorPrimary" />

                </LinearLayout>

                <!-- Arrow icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.5"
                    android:rotation="270"
                    android:contentDescription="View details" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOnSurfaceVariant"
                android:alpha="0.1"
                android:layout_marginVertical="8dp" />

            <!-- Remark section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="?attr/colorOnSurfaceVariant"
                    android:alpha="0.5"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Remark" />

                <!-- Remark (secondary gray text) -->
                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lunch with friends"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:alpha="0.8"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>