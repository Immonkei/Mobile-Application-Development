<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/md_surface">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_category"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/md_on_surface"
        android:layout_marginBottom="32dp" />

    <!-- Category Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/md_surface"
        app:hintTextColor="@color/md_outline"
        app:boxStrokeColor="@color/md_outline">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/category_name"
            android:maxLines="1"
            android:inputType="textCapWords" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Add Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddCategory"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/add_category"
        android:textSize="16sp"
        app:backgroundTint="@color/md_primary"
        android:textColor="@color/md_on_primary"
        app:cornerRadius="8dp"
        android:layout_marginTop="16dp" />

</LinearLayout>